<Project Sdk="Microsoft.NET.Sdk">

    <PropertyGroup>
        <TargetFrameworks>net472;net5.0</TargetFrameworks>
        <PlatformTarget>AnyCPU</PlatformTarget>
        <AssemblyName>OmniSharp</AssemblyName>
        <OutputType>Exe</OutputType>
        <PreserveCompilationContext>true</PreserveCompilationContext>
        <RuntimeIdentifiers>win7-x64;win7-x86;win10-arm64</RuntimeIdentifiers>
    </PropertyGroup>

    <ItemGroup>
        <ProjectReference Include="..\OmniSharp.Stdio\OmniSharp.Stdio.csproj" />
    </ItemGroup>

    <ItemGroup>
        <PackageReference Include="Microsoft.NETFramework.ReferenceAssemblies" PrivateAssets="All" />
    </ItemGroup>

    <ItemGroup Condition = "'$(TargetFramework)' == 'net5.0'">
        <PackageReference Include="NuGet.Frameworks" Version="5.9.1" />
        <PackageReference Include="NuGet.Packaging" Version="5.9.1" />
        <PackageReference Include="NuGet.ProjectModel" Version="5.9.1" />
        <PackageReference Include="NuGet.Versioning" Version="5.9.1" />
    </ItemGroup>
</Project>
